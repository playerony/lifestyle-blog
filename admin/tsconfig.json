{
  "compilerOptions": {
		"jsx": "react",
    "target": "ESNext", 
    "outDir": "./dist/",
    "module": "CommonJS", 
		"lib": ["esnext", "dom"],
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@admin/*": ["./*"],
      "@config/*": ["./config/*"],
      "@component/*": ["./component/*"],
      "@style/*": ["./style/*"]
    },
  },
  "exclude": [
    "node_modules"
  ]
}
  