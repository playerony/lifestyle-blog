{
  "presets": ["@babel/preset-typescript", ["@babel/preset-env", {
    "targets": {"node": "current"}
  }]],
  "plugins": [
    ["module-resolver", {
      "root": ["."],
      "alias": {
        "@server": ".",
        "@config": "./config",
        "@model": "./model",
        "@resolver": "./resolver",
        "@service": "./service",
        "@utility": "./utility"
      }
    }],
    "babel-plugin-transform-typescript-metadata",
    ["@babel/plugin-proposal-decorators", {
      "legacy": true
    }],
    ["@babel/plugin-proposal-class-properties", { "loose": true }]
  ]
}