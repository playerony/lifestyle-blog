{
  "compilerOptions": {
    "target": "es6", 
    "module": "CommonJS", 
    "moduleResolution": "node",  
    "strict": true,  
    "noImplicitAny": true,
    "importHelpers": true,
    "removeComments": true,  
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ],
  },
  "include": [
    "server/**/*",
    "client/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
